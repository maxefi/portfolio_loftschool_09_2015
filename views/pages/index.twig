{% block content %}
<!-- ОСНОВНАЯ ИНФОРМАЦИЯ -->
<section class="about">
  <h2 class="about-header">Основная информация</h2>
    <div class="about-body clearfix">
        <div class="image-wrap">
          <div class="avatar-box"><img src="{{ config.base_url }}app/img/ava.png" alt="avatar"></div>
        </div>
        <div class="worksheet-wrap">
          <ul class="worksheet-list">
            <li class="worksheet-item clearfix">
              <div class="worksheet-what">Меня зовут:</div>
              <div class="worksheet-info">Ефимов Максим Андреевич</div>
            </li>
            <li class="worksheet-item clearfix">
              <div class="worksheet-what">Мой возраст:</div>
